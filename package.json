    "bin/",
    "script/preinstall.mjs",
    "script/postinstall.mjs"
  ],
  "homepage": "https://github.com/eli0shin/cli-lsp-client#readme",
  "license": "MIT",
  "scripts": {
    "build": "./script/build.ts",
    "release": "./script/release.ts",
    "dev": "bun run src/cli.ts",
    "typecheck": "bun tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
